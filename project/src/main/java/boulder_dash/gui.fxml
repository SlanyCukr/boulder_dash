<VBox prefHeight="479.0" prefWidth="652.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="boulder_dash.App">
  <children>
    <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="458.0" prefWidth="652.0" VBox.vgrow="ALWAYS">
      <children>
            <TabPane prefHeight="758.0" prefWidth="652.0" tabClosingPolicy="UNAVAILABLE">
              <tabs>
                <Tab text="Main menu">
                  <content>
                    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="167.0" prefWidth="530.0">
                           <children>
                              <TextField id="playerName" fx:id="playerName" layoutX="26.0" layoutY="53.0" />
                              <Label layoutX="41.0" layoutY="22.0" prefHeight="18.0" prefWidth="142.0" text="Player name" textAlignment="CENTER" />
                              <Button id="start_game" fx:id="start_game" layoutX="26.0" layoutY="99.0" mnemonicParsing="false" onAction="#startGame" prefHeight="41.0" prefWidth="131.0" text="Start game" />
                              <Label fx:id="player1_set_up_label" layoutX="156.0" layoutY="132.0" />
                              <Label fx:id="player1_set_down_label" layoutX="155.0" layoutY="174.0" />
                              <Label fx:id="player2_set_up_label" layoutX="449.0" layoutY="132.0" />
                              <Label fx:id="player2_set_down_label" layoutX="448.0" layoutY="180.0" />
                              <Button id="start_game" fx:id="exit_game" layoutX="26.0" layoutY="210.0" mnemonicParsing="false" onAction="#exitGame" prefHeight="41.0" prefWidth="131.0" text="Exit game" />
                              <Button id="load_game" fx:id="load_game" layoutX="26.0" layoutY="154.0" mnemonicParsing="false" onAction="#loadGame" prefHeight="41.0" prefWidth="131.0" text="Load game" />
